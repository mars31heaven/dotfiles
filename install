#!/bin/bash

dotdir="$HOME/.dotfiles"
confdir="$HOME/.config"

ln -s "$dotdir"/bashrc $HOME/.bashrc \
	"$dotdir"/bash_profile $HOME/.profile

mkdir -p $HOME/.vim/autoload \
	$HOME/.w3m

ln -s "$dotdir"/vim/vimrc $HOME/.vim/vimrc \
	"$dotdir"/vim/autoload/plug.vim $HOME/.vim/autoload/plug.vim \
	"$dotdir"/w3m/config $HOME/.w3m/config \
	"$dotdir"/w3m/keymap $HOME/.w3m/keymap \
	"$dotdir"/w3m/mailcap $HOME/.w3m/mailcap

mkdir -p "$confdir"/abook \
	"$confdir"/dunst \
	"$confdir"/fontconfig \
	"$confdir"/lf \
	"$confdir"/mpd \
	"$confdir"/mpv \
	"$confdir"/mutt \
	"$confdir"/ncmpcpp \
	"$confdir"/newsboat \
	"$confdir"/nsxiv/exec \
	"$confdir"/qutebrowser \
	"$confdir"/shell \
	"$confdir"/surfraw \
	"$confdir"/sxhkd \
	"$confdir"/urlscan \
	"$confdir"/x11 \
	"$confdir"/yt-dlp \
	"$confdir"/zathura

ln -s "$dotdir"/abook/abookrc "$confdir"/abook/abookrc \
	"$dotdir"/dunst/dunstrc "$confdir"/dunst/dunstrc \
	"$dotdir"/fontconfig/font.conf "$confdir"/fontconfig/fonts.conf \
	"$dotdir"/lf/lfrc "$confdir"/lf/lfrc\
	"$dotdir"/lf/preview "$confdir"/lf/preview \
	"$dotdir"/lf/shortcutrc "$confdir"/lf/shortcutrc\
	"$dotdir"/mpd/mpd.conf "$confdir"/mpd/mpd.conf \
	"$dotdir"/mpv/input.conf "$confdir"/mpv/input.conf\
	"$dotdir"/mutt/mailcap "$confdir"/mutt/mailcap \
	"$dotdir"/mutt/muttrc "$confdir"/mutt/muttrc\
	"$dotdir"/ncmpcpp/bindings "$confdir"/ncmpcpp/bindings \
	"$dotdir"/ncmpcpp/config "$confdir"/ncmpcpp/config\
	"$dotdir"/nsxiv/exec/image-info "$confdir"/nsxiv/exec/image-info \
	"$dotdir"/nsxiv/exec/key-handler "$confdir"/nsxiv/exec/key-handler\
	"$dotdir"/shell/aliasrc "$confdir"/shell/aliasrc \
	"$dotdir"/shell/functionrc "$confdir"/shell/functionrc\
	"$dotdir"/shell/inputrc "$confdir"/shell/inputrc \
	"$dotdir"/shell/shortcutrc "$confdir"/shell/shortcutrc\
	"$dotdir"/surfraw/conf  "$confdir"/surfraw/conf \
	"$dotdir"/sxhkd/sxhkdrc "$confdir"/sxhkd/sxhkdrc\
	"$dotdir"/urlscan/config.json "$confdir"/urlscan/config.json \
	"$dotdir"/x11/xinitrc "$confdir"/x11/xinitrc \
	"$dotdir"/x11/xresources "$confdir"/x11/xresources \
	"$dotdir"/yt-dlp/config "$confdir"/yt-dlp/config\
	"$dotdir"/zathura/zathurarc "$confdir"/zathura/zathurarc

vim +PluginInstall +qall
