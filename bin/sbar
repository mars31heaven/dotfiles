#!/bin/env sh

# https://github.com/pystardust/sbar

# INIT
printf "$$" > ~/.cache/pidofbar
sec=0

# MODULES
update_time () {
	time="$(date "+%a %b %d %R")"
}

update_vol () {
	vol="$([ "$(pamixer --get-mute)" = "false" ] && printf '' || printf 'Muted ')$(pamixer --get-volume)%"
}

update_disk () {
	free_space_root="$(df -h | awk '{ if ($6 == "/") print $4 }')"
#	free_space_home="$(df -h | awk '{ if ($6 == "/home") print $4 }')"
}

# modules that don't update on their own need to be run at the start for getting their initial value
update_vol

display () {
	#printf "%s\n" " / $free_space_root ~ $free_space_home $weather $vol $time "
	xsetroot -name " / $free_space_root V $vol $time "
}

# SIGNALLING
# trap	"<function>;display"		"RTMIN+n"
trap	"update_vol;display"		"RTMIN"
# to update it from external commands
## kill -m "$(cat ~/.cache/pidofbar)"
# where m = 34 + n

while true
do
	sleep 1 & wait && {
		# to update item ever n seconds with a offset of m
		## [ $((sec % n)) -eq m ] && udpate_item
		[ $((sec % 30 )) -eq 0 ] && update_time # update time every 30 seconds
		[ $((sec % 3600)) -eq 2 ] && update_disk

		# how often the display updates ( 5 seconds )
		[ $((sec % 5 )) -eq 0 ] && display
		sec=$((sec + 1))
	}
done
