#!/bin/sh

options="\
	logout
	poweroff
	reboot
	suspend"

choice=$(printf '%s\n' "$options" | bemenu)

case $choice in

	logout)
		pkill Hyprland || notify-send "Hyprland was not running"
		;;

	poweroff)
		doas loginctl poweroff
		;;

	reboot)
		doas loginctl reboot
		;;

	suspend)
		doas loginctl suspend
		;;

esac
