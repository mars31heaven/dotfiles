#!/bin/sh -e
#
# open file in application based on file extension

# exit script if there's no input
if [ "$1" = "" ]; then exit; fi

case "$1" in
	*.mp3|*.flac|*.wav|*.ogg|*.opus|*.aiff|*.m4a|*.aac|*.m3u|*.pls)
		setsid -f mpv --no-save-position-on-quit --no-resume-playback --stop-screensaver=no "$1"
		;;

	*.mp4|*.mkv|*.webm|*.avi|*.mpg|*youtu.be*|watch?*|*/playlist?*)
		setsid -f mpv "$1"
		;;

	http*.png|http*.gif|http*.jpg|http*.jpe|http*.jpeg|http*.jpg*)
		nsxiv-url "$1"
		;;

	*.png|*.gif|*.jpg|*.jpe|*.jpeg)
		nsxiv-rifle "$1"
		;;

	*.pdf|*.cbr|*.epub)
		zathura "$1" >/dev/null 2>&1
		;;

	http*|www*)
		setsid -f "$BROWSER" "$1" >/dev/null 2>&1
		;;

	*.torrent)
		setsid -f qbittorrent "$1" >/dev/null 2>&1
		;;

	*)
		"$EDITOR" "$1"
		;;
esac
