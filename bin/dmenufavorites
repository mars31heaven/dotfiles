#!/bin/sh

favorites="\
anydesk:/usr/bin/anydesk
discord:/usr/bin/discord
gaupol:/usr/bin/gaupol
gmusicbrowser:/usr/bin/gmusicbrowser
keepassxc:/usr/bin/keepassxc
librewolf:/usr/bin/librewolf
mpd:/home/mrcl/.local/bin/mpd
pcmanfm:/home/mrcl/.local/bin/pcmanfm
qbittorrent:/usr/bin/qbittorrent
reaper:/usr/bin/reaper
simple-scan:/usr/bin/simple-scan
soundconverter:/usr/bin/soundconverter
thunderbird:/usr/bin/thunderbird"

choice=$(printf '%s\n' "$favorites" | cut -d':' -f1 | dmenu -l 20) || exit 1

"$choice"
