#!/bin/sh

# doas not required for some system commands
for command in mount umount zzz reboot poweroff shutdown sv vsv ; do
	alias $command="doas $command"
done; unset command

# Utilities configuration
# Colored output, verbosity and protection
# against overwriting.
alias \
	ls="ls --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	rm="rm -Iv" \
	cp="cp -iv" \
	mv="mv -iv" \
	vidir="vidir -v"


# XBPS Package Manager (Void Linux specific)
# abbreviations
alias  \
	xis="doas xbps-install -S" \
	xiu="doas xbps-install -Su" \
	xrr="doas xbps-remove -R" \
	xq="xbps-query -s" \
	xqr="xbps-query -R" \
	xqs="xbps-query -Rs" \
	xql="xbps-query -l" \
	xf="xbps-fetch"

# Use neovim for vim if present
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Browse the offline Void Linux handbook with w3m
alias wvoid="w3m /usr/share/doc/void/html/print.html"

# Other abbreviations
alias \
	v="$EDITOR" \
	l="ls" \
	ll="ls -A" \
	lll=" ls -lAcht" \
	lr="ls -R" \
	g="git" \
	gst="git status" \
	gcl="git clone" \
	gdi="git diff" \
	gad="git add" \
	gcm="git commit -m" \
	gca="git commit -a" \
	t="tmux" \
	ta="tmux attach-session" \
	tl="tmux ls" \
	qtb="qutebrowser" \
	z="zathura" \
	ppv="pipe-viewer" \
	pph="pipe-viewer -wv" \
	pps="pipe-viewer -S" \
	hstr="hh" \
	qbt="qbittorrent-nox"

# External storage
alias \
	m3m="pmount -e /dev/sdb1 m3" \
	sdm="pmount -e /dev/mmcblk1p* sd" \
	m3u="pumount /media/m3" \
	sdu="pumount /media/sd" \
	mtpm="simple-mtpfs --device 1 /media/android" \
	mtpu="fusermount -u /media/android"

# Managing wi-fi and bluetooth
alias \
	wup="doas ip link set dev wlp3s0 up && doas sv up iwd" \
	wdown="doas sv down iwd && doas ip link set dev wlp3s0 down" \
	wscan="iwctl station wlp3s0 scan" \
	wgn="iwctl station wlp3s0 get-networks" \
	bup="doas sv up bluetoothd && bluetoothctl power on && bluetoothctl connect 4C:65:A8:97:2F:9E" \
	bdown="bluetoothctl disconnect 4C:65:A8:97:2F:9E && bluetoothctl power off && doas sv down bluetoothd" \
	bhp="bluetoothctl connect 4C:65:A8:97:2F:9E"

# Other aliases
alias \
	abook="abook -C ~/.config/abook/abookrc --datafile ~/.local/share/abook/addressbook" \
	wi="vim -c VimwikiIndex" \
	di="vim -c VimwikiDiaryIndex" \
	www="w3m -B" \
	mdcat="mdcat -p" \
	ccat="highlight -O ansi" \
	sca="scrcpy"
