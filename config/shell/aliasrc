#!/bin/sh

# doas not required for some system commands
for command in mount umount loginctl reboot poweroff shutdown pacman sv rsm; do
	alias $command="doas $command"
done; unset command

alias \
	dv="doas nvim" \
	doas vim="doas nvim"

# Utilities configuration
# Colored output, verbosity and protection
# against overwriting.
alias \
	grep="grep -i --color=auto" \
	diff="diff --color=auto" \
	rm="rm -Iv" \
	cp="cp -riv" \
	mv="mv -iv" \
	vidir="vidir -v" \
	mkdir="mkdir -p"

# pacman, yay
alias \
	p="doas pacman" \
	pyu="doas pacman -Syu" \
	y="yay --removemake --noprovides --answerdiff None --answerclean None --mflags "--noconfirm""

# Use neovim for vim if present
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

alias \
	..="cd .." \
	v="$EDITOR" \
	vi="$EDITOR" \
	ls="exa" \
	l="exa" \
	ll="exa -lht modified" \
	lll="exa -alht modified" \
	lr="exa -R" \
	lh="exa -lhs modified | head -n 30" \
	lhr="exa -lrhs modified | head -n 30" \
	t="exa --tree" \
	g="grep" \
	lg="ls | grep" \
	cat="bat" \
	gi="git" \
	gst="git status" \
	gcl="git clone" \
	gdi="git diff" \
	gad="git add" \
	glo="git log" \
	gre="git restore" \
	gcm="git commit -m" \
	gca="git commit -a" \
	gpu="git push" \
	qtb="~/.local/bin/qtb" \
	z="zathura" \
	ppv="pipe-viewer" \
	pph="pipe-viewer -wv" \
	pps="pipe-viewer -S" \
	qbt="qbittorrent-nox --daemon" \
	mm="mpc" \
	ma="mpc add" \
	mc="mpc clear" \
	mp="mpc playlist" \
	mu="mpc up" \
	mt="mpc toggle" \
	bt="beet" \
	bi="beet import" \
	br="beet remove" \
	be="beet edit" \
	ytdl="yt-dlp" \
	iv="nsxiv-rifle" \
	ivu="nsxiv-url" \
	ncdu="ncdu --color off" \
	rs="rsync -rvP" \
	t="toot" \
	tt="toot tui" \
	tp="toot post -e" \
	tn="toot notifications" \
	fd="fd --unrestricted" \
	wi="vim -c VimwikiIndex" \
	www="w3m -B" \
	sca="scrcpy" \
	ph="bat /var/log/pacman.log" \
	jkt="~/.local/share/Jackett/jackett" \
	mpd="mpd && mpc up" \
	b="buku --suggest" \
	bp="buku -p" \
	bw="buku -w" \
	msar="mpc search Artist" \
	msal="mpc search Album" \
	icat="kitty +kitten icat" \
	c="calcurse" \
	pgr="nvimpager"

# External storage
alias \
	m3m="pmount -e /dev/sdd1" \
	m3u="pumount /media/sdd1"
