#!/bin/sh

# doas not required for some system commands
for command in mount umount loginctl reboot poweroff shutdown pacman sv rsm; do
	alias $command="doas $command"
done; unset command

alias \
	dv="doas nvim"

# Utilities configuration
# Colored output, verbosity and protection
# against overwriting.
alias \
	ls="ls --color=auto --group-directories-first" \
	grep="grep -i --color=auto" \
	diff="diff --color=auto" \
	rm="rm -Iv" \
	cp="cp -riv" \
	mv="mv -iv" \
	vidir="vidir -v" \
	mkdir="mkdir -p"

# pacman, yay
alias \
	p="doas pacman" \
	pyu="doas pacman -Syu" \
	y="yay --removemake"

# Use neovim for vim if present
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

alias \
	v="$EDITOR" \
	vi="$EDITOR" \
	l="ls" \
	ll="ls -A" \
	lll=" ls -lAcht" \
	lr="ls -R" \
	lh="ls -lAcht | head -n 30" \
	lhr="ls -lArcht | head -n 30" \
	g="grep" \
	lg="ls | grep" \
	c="bat --theme gruvbox-dark" \
	cat="bat --theme gruvbox-dark" \
	gi="git" \
	gst="git status" \
	gcl="git clone" \
	gdi="git diff" \
	gad="git add" \
	glo="git log" \
	gre="git restore" \
	gcm="git commit -m" \
	gca="git commit -a" \
	qtb="~/.local/bin/qtb" \
	z="zathura" \
	ppv="pipe-viewer" \
	pph="pipe-viewer -wv" \
	pps="pipe-viewer -S" \
	hstr="hh" \
	qbt="qbittorrent-nox --daemon" \
	mm="mpc" \
	ma="mpc add" \
	mc="mpc clear" \
	mp="mpc playlist" \
	mu="mpc up" \
	mt="mpc toggle" \
	b="beet" \
	bi="beet import" \
	br="beet remove" \
	be="beet edit" \
	ytdl="yt-dlp" \
	iv="nsxiv -a" \
	ivu="nsxiv-url" \
	yt="ytfzf" \
	ncdu="ncdu --color off" \
	rs="rsync -rvP" \
	t="toot" \
	tt="toot tui" \
	tp="toot post -e" \
	tn="toot notifications" \
	fd="fd --unrestricted" \
	mpm="mpv --no-save-position-on-quit --no-resume-playback" \
	abook="abook -C ~/.config/abook/abookrc --datafile ~/.local/share/abook/addressbook" \
	wi="vim -c VimwikiIndex" \
	di="vim -c VimwikiDiaryIndex" \
	www="w3m -B" \
	bat="bat --theme gruvbox-dark" \
	sca="scrcpy" \
	ph="cat /var/log/pacman.log" \
	mpd="mpd && mpc up && mpdscribble"

# External storage
alias \
	m3m="pmount -e /dev/sdc1" \
	m3u="pumount /media/m3" \
	mtpm="simple-mtpfs --device 1 /media/android" \
	mtpu="fusermount -u /media/android"
