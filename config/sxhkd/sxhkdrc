super + F3
	brownout 600

super + shift + F3
	brownout 0

super + minus
	pamixer --decrease 5 ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

super + plus
	pamixer --increase 5 ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

super + shift + BackSpace
	dmenupower

super + w
	qtb

super + e
	$TERMINAL -e $EDITOR

super + p
	dmenu_run_i

super + shift + p
	passmenu

super + shift + a
	$TERMINAL -e abook -C ~/.config/abook/abookrc --datafile ~/.local/share/abook/addressbook

super + s
	$TERMINAL -e syncthing --no-browser

super + shift + s
	pkill syncthing

super + shift + k
	dmenukill

super + x
	dim

super + shift + x
	xset s 99999

super + c
	dmenucalc

super + v
	$TERMINAL -e pulsemixer

super + shift + v
	$TERMINAL -e pipe-viewer

super + n
	$TERMINAL -e ncmpcpp

super + shift + n
	nicotine

super + m
	mpdmenu

super + shift + m
	pamixer --toggle-mute ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

super + shift + less
	mpc prev

super + shift + greater
	mpc next

ctrl + space
	dunstctl close-all

Print
	maim -u ~/06_imagens/04_capturas/cheia_$(date "+%Y_%m_%d_%s").png

shift + Print
	maim -uso ~/06_imagens/04_capturas/sel_$(date "+%Y_%m_%d_%s").png

shift + ctrl + Print
	scrdis

super + Insert
	clipmenu -l 20

super + Home
	rofi -show drun

super + shift + Home
	$TERMINAL -e htop

XF86Tools
	$TERMINAL -e ncmpcpp

XF86AudioMute
	pamixer --toggle-mute ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

XF86AudioLowerVolume
	pamixer --decrease 5 ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

XF86AudioRaiseVolume
	pamixer --increase 5 ; \
	kill -34 "$(cat ~/.cache/pidofbar)"

XF86MonBrightnessDown
	xbacklight -dec 2

XF86MonBrightnessUp
	xbacklight -inc 2

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86Mail
	mw -Y

XF86HomePage
	$BROWSER

XF86Calculator
	dmenucalc
